<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlertSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="manifest" href="/manifest.json">
    <!-- Google Fonts for INSPINIA theme -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AlertSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <a class="visually-hidden-focusable" href="#main-content">Aller au contenu</a>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <span class="me-2 d-inline-block kpi-dot"></span>
                    Alert Dashboard
                    <span id="badge-unread" class="badge rounded-pill badge-status-nonlu ms-2" style="display:none">0</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Suppression des onglets supplÃ©mentaires -->
                    </ul>
                    <div class="d-flex align-items-center">
                        <div class="text-light">
                            <i class="bi bi-building me-1"></i>
                            <span class="fw-bold">AlertSystem API</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AlertSystem
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/webpush-manager.js" asp-append-version="true"></script>
    <script src="~/gmail-dashboard.js" asp-append-version="true"></script>
    <script>
      // Ask notification permission on first load
      (async ()=>{ try{ if ("Notification" in window && Notification.permission === 'default'){ await Notification.requestPermission(); } }catch{} })();
      async function loadBadge(){
        try {
          const r = await fetch('/Alerts/UnreadCount', { cache:'no-store' });
          if(!r.ok) return;
          const { count } = await r.json();
          const el = document.getElementById('badge-unread');
          if(el){ el.style.display = count>0?'inline-block':'none'; el.textContent = count; }
        } catch {}
      }
      loadBadge();
      if (window.signalR){
        const conn = new signalR.HubConnectionBuilder().withUrl('/hubs/notifications').withAutomaticReconnect().build();
        conn.on('badgeChanged', ()=> loadBadge());
        conn.on('historyChanged', ()=> loadBadge());
        conn.on('sentChanged', ()=> loadBadge());
        conn.on('deptChanged', ()=> loadBadge());
        conn.on('newAlert', (payload)=>{
          try{
            if (Notification.permission === 'granted' && navigator.serviceWorker?.controller){
              navigator.serviceWorker.controller.postMessage({
                type:'SHOW_ALERT_NOTIFICATION',
                title: payload?.title || 'Nouvelle alerte',
                message: payload?.message || '',
                alertId: payload?.alertId
              });
            } else if (Notification.permission === 'granted') {
              const title = payload?.title || 'Nouvelle alerte';
              const body = payload?.message || '';
              const icon = '/favicon.ico';
              const n = new Notification(title, { body, icon });
              n.onclick = () => {
                try{ window.focus(); }catch{}
                const id = payload?.alertId;
                if (id) window.location.href = `/AlertsCrud/Details/${id}`;
              };
            }
          }catch{}
        });
        conn.start();
      }
      // Safeguard: periodic refresh in case of missed events
      setInterval(loadBadge, 3000);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
