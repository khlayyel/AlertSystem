                        </li>
                    </ul>

                    <div class="tab-content mt-3" id="resultTabsContent">
                        <!-- Onglet Historique -->
                        <div class="tab-pane fade show active" id="historique" role="tabpanel">
                            <div id="historique-loading" class="text-center py-4" style="display: none;">
