@{
    ViewData["Title"] = "AlertSystem - Accueil";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">
                <i class="bi bi-bell-fill me-3"></i>AlertSystem
            </h1>
            <p class="lead text-muted">Système de gestion d'alertes multi-canal</p>
        </div>
    </div>

    <!-- Utilisateurs et Rôles -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="bi bi-people-fill me-2"></i>Utilisateurs et Rôles
            </h2>
        </div>
    </div>

    <div class="row g-4">
        <!-- Admin -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>Admin
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Khalil Ouerghemmi</h6>
                    <p class="card-text small text-muted">khalilouerghemmi@gmail.com</p>
                    
                    <h6 class="mt-3">Permissions :</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Créer des alertes</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Voir toutes les alertes</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Gérer les utilisateurs</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Configuration système</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Accès complet</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- SuperUser -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-star-fill me-2"></i>SuperUser
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Zied Soltani</h6>
                    <p class="card-text small text-muted">zied.soltani111@gmail.com</p>
                    
                    <h6 class="card-title mt-3">Fatma Karray</h6>
                    <p class="card-text small text-muted">fatma.karray@test.com</p>
                    
                    <h6 class="mt-3">Permissions :</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Créer des alertes</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Voir toutes les alertes</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Gérer son département</li>
                        <li><i class="bi bi-x-circle text-danger me-2"></i>Configuration système</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- User -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-secondary">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person me-2"></i>User
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Sarah Ben Ali</h6>
                    <p class="card-text small text-muted">sarah.benali@test.com</p>
                    
                    <h6 class="card-title mt-3">Ahmed Trabelsi</h6>
                    <p class="card-text small text-muted">ahmed.trabelsi@test.com</p>
                    
                    <h6 class="mt-3">Permissions :</h6>
                    <ul class="list-unstyled small">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Recevoir des alertes</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Marquer comme lu</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Voir ses alertes</li>
                        <li><i class="bi bi-x-circle text-danger me-2"></i>Créer des alertes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Fonctionnalités -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="bi bi-gear-fill me-2"></i>Fonctionnalités
            </h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-envelope-fill text-primary" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-3">Email</h5>
                    <p class="card-text small">Notifications par email via SMTP Gmail</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-whatsapp text-success" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-3">WhatsApp</h5>
                    <p class="card-text small">Messages WhatsApp via Facebook Graph API</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-bell-fill text-warning" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-3">Desktop</h5>
                    <p class="card-text small">Notifications desktop via Web Push</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="bi bi-lightning-fill text-info" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-3">Temps Réel</h5>
                    <p class="card-text small">Mises à jour live via SignalR</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h3 class="mb-4">Commencer</h3>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <a href="/Dashboard" class="btn btn-primary btn-lg">
                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                    </a>
                    <a href="/Home/WebPushTest" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-bell me-2"></i>Test Notifications
                    </a>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Se Connecter
                    </a>
                }
            </div>
        </div>
    </div>
</div>
