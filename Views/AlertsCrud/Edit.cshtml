@model AlertSystem.Models.Entities.Alert
@{
    ViewData["Title"] = "Modifier l'alerte";
    var isAdmin = User.IsInRole("Admin");
}
<div class="container py-3">
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex align-items-center justify-content-between mb-2">
        <h3 class="mb-0">Modifier l'alerte</h3>
        <a class="btn btn-sm btn-outline-secondary" asp-action="Index">Retour</a>
      </div>
      <form asp-action="Edit" method="post" class="mt-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AlertId" />
    <div class="mb-3">
      <label class="form-label">Titre</label>
      <input asp-for="Title" class="form-control" />
      <span asp-validation-for="Title" class="text-danger small"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Message</label>
      <textarea asp-for="Message" class="form-control" rows="4"></textarea>
      <span asp-validation-for="Message" class="text-danger small"></span>
    </div>
    <div class="row g-3">
      <div class="col-sm-4">
        <label class="form-label">Type</label>
        <select asp-for="AlertType" class="form-select">
          <option value="Information">Information</option>
          <option value="Obligatoire">Obligatoire</option>
        </select>
        <span asp-validation-for="AlertType" class="text-danger small"></span>
      </div>
      <div class="col-sm-4">
        <label class="form-label">DÃ©partement</label>
        @if (isAdmin)
        {
            <select asp-for="DepartmentId" class="form-select">
              <option value="">-- Choisir --</option>
              @if (ViewBag.Departments is List<AlertSystem.Models.Entities.Department> depts)
              {
                  foreach (var d in depts) {
                      if (Model.DepartmentId == d.DepartmentId) {
                        <option value="@d.DepartmentId" selected>@d.Name</option>
                      } else {
                        <option value="@d.DepartmentId">@d.Name</option>
                      }
                  }
              }
            </select>
        }
        else
        {
            <select asp-for="DepartmentId" class="form-select" disabled>
              <option value="">-- Choisir --</option>
              @if (ViewBag.Departments is List<AlertSystem.Models.Entities.Department> depts)
              {
                  foreach (var d in depts) {
                      if (Model.DepartmentId == d.DepartmentId) {
                        <option value="@d.DepartmentId" selected>@d.Name</option>
                      } else {
                        <option value="@d.DepartmentId">@d.Name</option>
                      }
                  }
              }
            </select>
            <input type="hidden" asp-for="DepartmentId" />
        }
      </div>
      <div class="col-sm-4 d-flex align-items-end">
        <div class="form-check">
          <input class="form-check-input" asp-for="IsManual" />
          <label class="form-check-label" for="IsManual">Envoi manuel</label>
        </div>
      </div>
    </div>
    <div class="mt-3 d-flex gap-2">
      <button class="btn btn-primary" type="submit">Enregistrer</button>
      <a class="btn btn-secondary" asp-action="Index">Annuler</a>
    </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}


