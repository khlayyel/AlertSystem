@model AlertSystem.Models.Entities.Alert
@{
    ViewData["Title"] = "Détails de l'alerte";
}
<div class="container py-3">
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="d-flex align-items-center justify-content-between mb-2">
        <h3 class="mb-0">@Model.Title</h3>
        <a class="btn btn-sm btn-outline-secondary" asp-action="Index">Retour</a>
      </div>
  <dl class="row mt-3">
    <dt class="col-12 col-md-3">Type</dt><dd class="col-12 col-md-9">@Model.AlertType</dd>
    <dt class="col-12 col-md-3">Message</dt><dd class="col-12 col-md-9">@Model.Message</dd>
    <dt class="col-12 col-md-3">Département</dt><dd class="col-12 col-md-9">@(Model.Department?.Name ?? "")</dd>
    <dt class="col-12 col-md-3">Créée le</dt><dd class="col-12 col-md-9">@Model.CreatedAt.AddHours(1).ToString("yyyy-MM-dd HH:mm")</dd>
  </dl>
  <div class="mt-3 d-flex gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.AlertId">Modifier</a>
  </div>
    </div>
  </div>
</div>


