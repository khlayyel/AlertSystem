@model AlertSystem.Models.Entities.Alert
@{
    ViewData["Title"] = "Détails de l'alerte";
}
<div class="container py-3">
  <h3>@Model.Title</h3>
  <dl class="row mt-3">
    <dt class="col-sm-3">Type</dt><dd class="col-sm-9">@Model.AlertType</dd>
    <dt class="col-sm-3">Message</dt><dd class="col-sm-9">@Model.Message</dd>
    <dt class="col-sm-3">Département</dt><dd class="col-sm-9">@Model.DepartmentId</dd>
    <dt class="col-sm-3">Créée le</dt><dd class="col-sm-9">@Model.CreatedAt</dd>
  </dl>
  <div class="mt-3 d-flex gap-2">
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.AlertId">Modifier</a>
    <a class="btn btn-secondary" asp-action="Index">Retour</a>
  </div>
  
</div>


